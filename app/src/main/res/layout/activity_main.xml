<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/truthOrDareTextView"
        android:layout_width="wrap_content"
        android:padding="120dp"
        android:layout_height="wrap_content"
        android:text="Play"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btnTruthOrDare"
        app:layout_constraintEnd_toEndOf="@+id/btnTruthOrDare"
        app:layout_constraintStart_toStartOf="@+id/btnTruthOrDare"
        app:layout_constraintTop_toTopOf="@+id/btnTruthOrDare" />

    <TextView
        android:id="@+id/descriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:text="Tap the button to play"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/btnTruthOrDare"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:lottie_rawRes="@raw/animation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descriptionTextView"
        app:lottie_loop="false"/>

</androidx.constraintlayout.widget.ConstraintLayout>